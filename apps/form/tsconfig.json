{
  "extends": [
    "@repo/config-typescript/nextjs.json"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/app/*": [
        "app/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
}